<script type="text/javascript">
  $(document).ready(function(){
    $(".user_profile").on('click', function(){
      var id = $(this).attr('data-item');
      $.ajax({
        method: 'get',
        url: "/user_profiles/get_user_profile",
        data: {id: id}
      }).done(function(data) {
        $("#blog-p").text(data.data);
        $(".blog-image").attr('src', data.avatar);
      });
    });
  });
</script>

